<?xml version="1.0"?>
<ruleset name="norsys_php_test">

    <description>Check style standard to test Norsys PHP projects</description>

    <!-- Add Norsys rules specific to tests -->
    <rule ref="../">
        <exclude name="Generic.NamingConventions.UpperCaseConstantName.ConstantNotUpperCase" />
        <exclude name="PSR1.Files.SideEffects.FoundWithSymbols" />
        <exclude name="Squiz.WhiteSpace.SemicolonSpacing.Incorrect" />
        <exclude name="Squiz.PHP.DisallowMultipleAssignments.Found" />
        <exclude name="Squiz.Commenting" />
        <exclude name="Generic.Commenting" />
        <exclude name="PSR2.Methods.FunctionCallSignature.EmptyLine" />
        <exclude name="PEAR.Functions.FunctionCallSignature.EmptyLine" />
        <exclude name="Generic.Files.LineLength.MaxExceeded" />
        <exclude name="Generic.Files.LineLength.TooLong" />
        <exclude name="Squiz.Commenting.ClassComment.Missing"/>
        <exclude name="Squiz.Commenting.FunctionComment.Missing"/>
    </rule>

</ruleset>
